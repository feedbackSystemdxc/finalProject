<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">

        window.history.forward();
        function noBack() {
            window.history.forward();
        }
    </script>
    <style>
        .rightdiv { width: 70%; border: 1px solid #DCDCDC; background-color: #FFF; border-radius: 7px 7px 7px 7px; -moz-border-radius: 3px; -webkit-border-radius: 3px; margin: auto; margin-bottom:30px; padding: 4px; }
        .div-bookmarklet{ background-color: black; color: white; font-family: Arial, Helvetica, sans-serif; font-size: 16px; font-weight: 400; margin-bottom: 4px; position: relative; border-radius: 4px 4px 4px 4px; -moz-border-radius: 3px; -webkit-border-radius: 3px; padding: 10px; height:45px;}
        .bookmarklet { background-position: -32px -63px; width: 16px; height: 16px; float: left; margin-right: 3px; }
        .small { font-family: Arial, Helvetica, sans-serif; font-size: 11px; line-height: 13px; color: #3D3D3D; font-weight: 400; font-style: normal; }
        .make-it-big{font-size:medium;}
        div{
            font-family:Arial, Helvetica, sans-serif;
        }
    </style>

</head>
<body onload="noBack();" onpageshow="if (event.persisted) noBack();" onunload="">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:black;">
        <div class="container">
            <div class="navbar-header">
                <a href="#Index" style="margin-left:0px"><img src="https://assets.website-files.com/5d96e7e173d7f14b2cdb74f2/5d96e7e173d7f16a59db7a59_3_logo_hz_rev.png" style="width:350px; height:auto; float:left;  margin-left:0px" /></a>
            </div>
            <div style="color:white; padding:5px; float:right; margin-top:30px; font-size:large">
                @Html.ActionLink("Logout", "Logout",null, new { @style="color:white; text-decoration:underline;"})
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:70px; ">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
